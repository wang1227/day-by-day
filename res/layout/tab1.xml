<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_tab1_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/ll_tab1_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_tab1_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12月1日" />

            <TextView
                android:id="@+id/tv_tab1_nongli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="农历十一月廿三" />

            <TextView
                android:id="@+id/tv_tab1_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="狗年" />

            <TextView
                android:id="@+id/tv_tab1_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日天气：晴" />

            <TextView
                android:id="@+id/tv_tab1_temple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温度：26度" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_tab1_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_tab1_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_tab1_top"
        android:text="新建日程" />

    <ListView
        android:id="@+id/lv_tab1_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_tab1_new" >
    </ListView>

</RelativeLayout>